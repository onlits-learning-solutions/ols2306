			studentb.index();
			
			System.out.print("Hello");
		}
	}
	
	class System {
		public static PrintStream out;
	}
	
	System is class. (Ok)
	out is a variable not of System class but of PrintStream Class
	print is method of PrintStream.
	
	Loose coupling
	
	class student
	{
		public:
			void index()
			{
			
			}
	};
	
	int main(void)
	{
		Student student;		//Static instantiation	
		Student *studentp = new Student(); //dynamic
		
		student.index();
		studentp->index();
	}
	
